      <approximation name="Tanh">
        <lambda_min>0.30</lambda_min>
        <lambda_max>6.20</lambda_max>
      </approximation>
    </Kernel>
    <Source type="Local">
      <position>0 0 0 0</position>
    </Source>
 
   </RationalApprox>

  

