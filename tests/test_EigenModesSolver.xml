<?xml version="1.0" encoding="UTF-8" ?>
<!-- sample input file for testing eigenmode classes -->
<Parameters>
  <!-- Geometry parameters here -->
  <Geometry>
    <Lattice>4 4 4 8</Lattice>
    <Nodes>1 1 1 1</Nodes>
    <Boundary_cond>1 1 1 1</Boundary_cond>
  </Geometry>
  <!-- Input configuration -->
  <Configuration Type="TextFile" Input="FileList">
    <starting_idx>0</starting_idx>
    <idx_increment>1</idx_increment>
    <filename>conf_04040408.txt</filename>
  </Configuration> 
  <RandomNumberGen name="Mersenne Twister"> 
    <init>0x123 0x234 0x345 0x456</init>
  </RandomNumberGen>
  <Smearing type="Off"></Smearing>
  <GaugeFixing name="NoFixing"></GaugeFixing>
  <Output>
    <output_prefix>Output/eigen_</output_prefix>
  </Output>
  <Measurement>
    <EigenModesCalc>
<!--
      <WilsonLikeDirac name="DiracWilson">
	<mass>-1.0</mass>
      </WilsonLikeDirac>
-->
     <WilsonLikeDirac name="DiracMobius">
       <Dirac_denominator name="DiracWilson">
	 <mass>1.0</mass><!-- this is actually m+2/c -->
       </Dirac_denominator>
       <Solver type="Solver_CG">
	 <MaxIter>10000</MaxIter>
	 <Precision>1e-28</Precision>
       </Solver>
       <b>2.0</b>
       <c>1.0</c>
     </WilsonLikeDirac>
<!--
     <WilsonLikeDirac name="DiracOptimalDomainWall4d_eo">
       <mass>-1.0</mass>
       <Kernel5d>
	 <Preconditioning>NoPreconditioner</Preconditioning>
	 <N5d>4</N5d>
	 <b>1.0</b>
	 <c>1.0</c>
	 <mass>0.10</mass>
	 <BaseKernel name="DiracWilson">
	   <mass>-1.6</mass>
	 </BaseKernel>
	 <approximation name="Zolotarev">
	   <lambda_min>0.1</lambda_min>
	   <lambda_max>1.5</lambda_max>
	 </approximation>
       </Kernel5d>
       <SolverDWF type="Solver_CG">
	 <MaxIter>10000</MaxIter>
	 <Precision>1e-4</Precision>
       </SolverDWF>
     </WilsonLikeDirac>
-->
     <Operator name="Hx" sorting="Lowest">      
       <threshold>0.075</threshold>
<!--<Acceleration name="None">-->
       <Acceleration name="Chebyshev" kernel_op="DdagDLinear">
	  <ex_lower>0.08</ex_lower>
	  <ex_upper>2.2</ex_upper>
	  <Npoly>10</Npoly>
	</Acceleration>
      </Operator>
      <EigenModesSolver name="ImplicitRestartedLanczos">
	<Nthreshold>4</Nthreshold>
	<Nk>10</Nk>
	<Np>40</Np>
	<precision>1e-10</precision>
	<max_iter>2</max_iter>	
      </EigenModesSolver>
    </EigenModesCalc>
  </Measurement>
</Parameters>

