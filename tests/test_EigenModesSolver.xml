<?xml version="1.0" encoding="UTF-8" ?>
<!-- sample input file for testing eigenmode classes -->
<Parameters>
  <!-- Geometry parameters here -->
  <Geometry>
    <Lattice>4 4 4 8</Lattice>
    <Nodes>1 1 1 1</Nodes>
    <Boundary_cond>1 1 1 1</Boundary_cond>
  </Geometry>
  <!-- Input configuration -->
  <Configuration Type="TextFile" Input="FileList">
    <filename>conf_04040408.txt</filename>
  </Configuration> 
  <RandomNumberGen name="Mersenne Twister"> 
    <init>0x123 0x234 0x345 0x456</init>
  </RandomNumberGen>
  <Smearing type="Off"></Smearing>
  <GaugeFixing name="NoFixing"></GaugeFixing>
  <Output>
    <starting_idx>0</starting_idx>
    <idx_increment>1</idx_increment>
    <output_prefix>Output/eigen_</output_prefix>
  </Output>
  <Measurement>
    <EigenModesCalc>
      <WilsonLikeDirac name="DiracWilson">
	<mass>-1.0</mass>
      </WilsonLikeDirac>
      <Operator name="Hx" sorting="Lowest">      
	<threshold>0.075</threshold>
<!--<Acceleration name="None">-->
       <Acceleration name="Chebyshev" kernel_op="DdagDLinear">
	  <ex_lower>0.08</ex_lower>
	  <ex_upper>2.2</ex_upper>
	  <Npoly>10</Npoly>
	</Acceleration>
      </Operator>
      <EigenModesSolver name="ImplicitRestartedLanczos">
	<Nthreshold>4</Nthreshold>
	<Nk>10</Nk>
	<Np>40</Np>
	<precision>1e-10</precision>
	<max_iter>2</max_iter>	
      </EigenModesSolver>
    </EigenModesCalc>
  </Measurement>
</Parameters>

