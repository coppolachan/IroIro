    for(int x=0; x<Xb; ++x){
      int Nslice = shiftSite_oe.slice_size(x,mu);
      
      
      for(int k= tid*Nslice/nid; k<(tid+1)*Nslice/nid; ++k){   
	int xc = shiftSite_oe.xslice(x,k,mu);
