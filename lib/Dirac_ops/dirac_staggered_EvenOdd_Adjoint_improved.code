	  vector4double u4 = vec_ld((a*(NC_*NC_-1))*sizeof(double), U);
	  vector4double m4 = vec_mul(v4_1,u4);
	  u4 = vec_ld((a*(NC_*NC_-1)+4)*sizeof(double), U);
	  vector4double m4_2 = vec_madd(v4_2,u4,m4);
